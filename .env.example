# RadioStation Configuration
# Copy this file to .env and adjust values as needed

# Basic Settings
CLIP_SECONDS=2
SAMPLES_PER_BANK=24
NUM_BANKS=16
# 0 = run until complete, 1+ = retry that many times
MAX_RETRIES_PER_THEME=0
SEARCH_RESULTS_PER_THEME=32

# Processing Settings
# Parallel downloads (max: 10)
DOWNLOAD_WORKERS=4
# Segments per video (if >1 creates _s1, _s2, etc. from the same video during processing)
SLICES_PER_VIDEO=1
# Offset between slices
SLICE_STRIDE_SECONDS=1
# Size of video segment to download (auto-adjusted to >= clip duration)
DOWNLOAD_CHUNK_SECONDS=10

# Download Configuration
# 'best' or 'worst'
AUDIO_QUALITY=best
# 'smart', 'segment', or 'aria2c'
DOWNLOAD_METHOD=smart
CONCURRENT_FRAGMENT_DOWNLOADS=4

# aria2c Settings
ARIA2C_ENABLED=1
# Max: 16, default: 4 (conservative)
ARIA2C_CONN_PER_SERVER=4
# Max: 16, default: 4 (conservative)
ARIA2C_SPLIT=4
ARIA2C_CHUNK_SIZE=10M

# yt-dlp Settings
YTDLP_USE_SECTIONS=1
YTDLP_FORMAT=bestaudio[filesize<10M]/bestaudio/best

# CLAP Scoring
SCORING_ENABLED=0
CLAP_MODEL_PATH=models/music_speech_audioset_epoch_15_esc_89.98.pt
# 0-1: clips below this are discarded
SCORING_MIN_SIMILARITY=0.2

# Session Management
# Leave empty for auto-generated
SESSION_ID=

# OpenAI Integration (optional)
# Your API key or leave empty to use env var
OPENAI_API_KEY=
# 1 to enable search term expansion
USE_OPENAI_EXPANSION=0

# Words List Mode
# 1 to use words.txt instead of theme searches
USE_WORDS_LIST=0
# 'one_per_theme' or 'unique_per_query'
WORDS_MODE=one_per_theme
# Comma-separated theme indices to exclude
THEME_WORDS_OPT_OUT=

# Theme Definitions
# Note: If app/themes.json exists, it overrides these .env settings
# Themes can be simple names or include search terms and CLAP prompts

# Simple format (name only):
THEME1=Soft
THEME2=Loud
THEME3=Bumpy
THEME4=Smooth
THEME5=Harsh
THEME6=Warm
THEME7=Bright
THEME8=Dark
THEME9=Metallic
THEME10=Woody
THEME11=Airy
THEME12=Noisy
THEME13=Percussive
THEME14=Sustained
THEME15=Glitchy
THEME16=Eerie
